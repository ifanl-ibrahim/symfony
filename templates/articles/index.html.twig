{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>
        {% for article in articles %}
            <div class="card mb-3">
                <div class="card-body">
                    <h4 class="card-title">{{ article.title }}</h4>
                    <h5 class="card-author">Par : {{ article.author.firstname }}</h5>
                    <p class="card-text">{{ article.content }}</p>
                    {# <a href="{{ path('article.property', {id: property.id) }}" class="card-text">Lire l'article</a> #}
                </div>
            </div>
        {% endfor %}
{% endblock %}
